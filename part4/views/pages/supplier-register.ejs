</head>

<body>
    <div class="container">
        <div class="header">
            <div class="logo-container">
                <div class="logo">מ</div>
            </div>
            <h1>הרשמת ספק חדש</h1>
            <p>הזן את הפרטים שלך להצטרפות למערכת</p>
        </div>

        <div class="form-container">
            <form id="supplierRegistrationForm" action="/supplier/register" method="POST">
                <div class="form-group">
                    <label for="companyName">שם החברה</label>
                    <input type="text" id="companyName" name="companyName" placeholder="הזן את שם החברה" required>
                    <i class="fas fa-building input-icon"></i>
                    <div class="error-message">נא להזין שם חברה תקין</div>
                </div>

                <div class="form-group">
                    <label for="phoneNumber">מספר טלפון</label>
                    <input type="tel" id="phoneNumber" name="phoneNumber" placeholder="הזן מספר טלפון" required>
                    <i class="fas fa-phone input-icon"></i>
                    <div class="error-message">נא להזין מספר טלפון תקין</div>
                </div>

                <div class="form-group">
                    <label for="representativeName">שם הנציג</label>
                    <input type="text" id="representativeName" name="representativeName" placeholder="הזן את שם הנציג"
                        required>
                    <i class="fas fa-user input-icon"></i>
                    <div class="error-message">נא להזין שם נציג תקין</div>
                </div>

                <div class="form-group">
                    <label for="password">סיסמה</label>
                    <input type="password" id="password" name="password" placeholder="הזן סיסמה" required>
                    <i class="fas fa-lock input-icon"></i>
                    <div class="error-message">נא להזין סיסמה תקינה</div>
                </div>

                <div class="form-group">
                    <label for="confirmPassword">אימות סיסמה</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" placeholder="אמת סיסמה" required>
                    <i class="fas fa-lock input-icon"></i>
                    <div class="error-message">הסיסמאות אינן תואמות</div>
                </div>
                <div class="form-group products-section">
                    <label>מוצרים</label>
                    <button type="button" class="btn btn-secondary" id="addProductBtn">
                        <i class="fas fa-plus"></i> הוסף מוצר
                    </button>

                    <div id="productsContainer" class="products-list">
                        <!-- מוצרים יופיעו כאן -->
                    </div>
                </div>
                <button type="submit" class="btn" id="registerBtn">הרשמה</button>
            </form>

            <div class="back-link">
                <a href="/supplier-login"><i class="fas fa-arrow-right"></i> חזרה להתחברות</a>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('supplierRegistrationForm');
            const registerBtn = document.getElementById('registerBtn');
            const addProductBtn = document.getElementById('addProductBtn');
            const productsContainer = document.getElementById('productsContainer');
            let productCounter = 0;

            // פונקציה ליצירת שורת מוצר חדשה
            function createProductRow() {
                productCounter++;
                const productRow = document.createElement('div');
                productRow.className = 'product-row';
                productRow.dataset.productId = productCounter; // שמירת מזהה ייחודי לכל שורה
                productRow.innerHTML = `
            <div class="product-details">
                <input type="text" name="productName" class="product-name" placeholder="שם המוצר" required>
                <input type="number" name="productPrice" class="product-price" placeholder="מחיר" min="0" step="0.01" required>
                <input type="number" name="minQuantity" class="product-min-quantity" placeholder="כמות מינימלית" min="1" required>
                <button type="button" class="remove-product-btn" aria-label="מחק מוצר">
                    <i class="fas fa-trash-alt"></i>
                </button>
            </div>
        `;

                // מאזין אירועים למחיקת המוצר
                const removeBtn = productRow.querySelector('.remove-product-btn');
                removeBtn.addEventListener('click', function () {
                    productsContainer.removeChild(productRow);
                });

                return productRow;
            }

            // הוספת מוצר חדש
            addProductBtn.addEventListener('click', function () {
                const newProductRow = createProductRow();
                productsContainer.appendChild(newProductRow);
            });

            form.addEventListener('submit', function (e) {
                e.preventDefault();

                // איסוף נתונים
                const companyName = document.getElementById('companyName').value;
                const phoneNumber = document.getElementById('phoneNumber').value;
                const representativeName = document.getElementById('representativeName').value;
                const password = document.getElementById('password').value;
                const confirmPassword = document.getElementById('confirmPassword').value;

                // איסוף נתוני מוצרים - שיטה מתוקנת
                const products = [];
                const productRows = productsContainer.querySelectorAll('.product-row');

                productRows.forEach((row) => {
                    const productName = row.querySelector('.product-name').value;
                    const productPrice = parseFloat(row.querySelector('.product-price').value);
                    const minQuantity = parseInt(row.querySelector('.product-min-quantity').value);

                    products.push({
                        productName,
                        productPrice,
                        minQuantity
                    });
                });

                console.log('מספר המוצרים שנאספו:', products.length);
                console.log('פרטי המוצרים:', JSON.stringify(products));

                // איפוס שגיאות
                const formGroups = form.querySelectorAll('.form-group');
                formGroups.forEach(group => group.classList.remove('error'));

                // אם כל הנתונים תקינים
                if (true) {
                    // הצגת אנימציית טעינה
                    registerBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> מבצע הרשמה...';
                    registerBtn.disabled = true;

                    // בניית אובייקט נתונים לשליחה
                    const supplierData = {
                        companyName,
                        phoneNumber,
                        representativeName,
                        password,
                        confirmPassword,
                        products
                    };
                    console.log('נתונים שנשלחים לשרת:', JSON.stringify(supplierData));

                    // שליחת בקשת הרשמה לשרת
                    fetch('/supplier/register', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(supplierData)
                    })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                showSuccessMessage();
                            } else {
                                // טיפול בשגיאה מהשרת
                                alert(data.error);
                                registerBtn.innerHTML = 'הרשמה';
                                registerBtn.disabled = false;
                            }
                        })
                        .catch(error => {
                            console.error('שגיאה:', error);
                            alert('אירעה שגיאה בהרשמה');
                            registerBtn.innerHTML = 'הרשמה';
                            registerBtn.disabled = false;
                        });
                }
            });
            // פונקציה להצגת הודעת הצלחה 
            function showSuccessMessage() {
                // יצירת הודעת הצלחה
                const messageBox = document.createElement('div');
                messageBox.style.position = 'fixed';
                messageBox.style.top = '50%';
                messageBox.style.left = '50%';
                messageBox.style.transform = 'translate(-50%, -50%)';
                messageBox.style.backgroundColor = 'white';
                messageBox.style.padding = '20px';
                messageBox.style.borderRadius = '10px';
                messageBox.style.boxShadow = '0 0 20px rgba(0,0,0,0.3)';
                messageBox.style.zIndex = '1000';
                messageBox.style.minWidth = '300px';
                messageBox.style.textAlign = 'center';
                messageBox.style.direction = 'rtl';

                const title = document.createElement('h3');
                title.textContent = 'הרשמה הצליחה!';
                title.style.marginBottom = '15px';
                title.style.color = '#2e7d32';

                const message = document.createElement('p');
                message.textContent = 'ברוכים הבאים למערכת ניהול המכולת';
                message.style.marginBottom = '20px';

                const checkmark = document.createElement('div');
                checkmark.innerHTML = '✓';
                checkmark.style.color = '#4CAF50';
                checkmark.style.fontSize = '50px';
                checkmark.style.fontWeight = 'bold';
                checkmark.style.marginBottom = '20px';

                const continueButton = document.createElement('button');
                continueButton.textContent = 'המשך להתחברות';
                continueButton.style.padding = '10px 15px';
                continueButton.style.backgroundColor = '#2e7d32';
                continueButton.style.color = 'white';
                continueButton.style.border = 'none';
                continueButton.style.borderRadius = '5px';
                continueButton.style.cursor = 'pointer';
                continueButton.style.fontSize = '0.9rem';
                continueButton.style.fontWeight = 'bold';

                continueButton.addEventListener('click', function () {
                    event.preventDefault();
                    document.body.removeChild(overlay);
                    document.body.removeChild(messageBox);

                    // ניתוב לדף ההתחברות
                    window.location.href = '/supplier-login';
                });

                messageBox.appendChild(checkmark);
                messageBox.appendChild(title);
                messageBox.appendChild(message);
                messageBox.appendChild(continueButton);

                const overlay = document.createElement('div');
                overlay.style.position = 'fixed';
                overlay.style.top = '0';
                overlay.style.left = '0';
                overlay.style.width = '100%';
                overlay.style.height = '100%';
                overlay.style.backgroundColor = 'rgba(0,0,0,0.5)';
                overlay.style.zIndex = '999';

                document.body.appendChild(overlay);
                document.body.appendChild(messageBox);

                // איפוס הכפתור
                registerBtn.innerHTML = 'הרשמה';
                registerBtn.disabled = false;

                // איפוס הטופס
                form.reset();
            }
        });
    </script>